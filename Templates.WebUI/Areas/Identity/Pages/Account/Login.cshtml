@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="~/css/login.css" rel="stylesheet" />
<h1>@ViewData["Title"]</h1>
<div id="login">
    <h3 class="text-center text-white pt-5">Login form</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="account" method="post">
                        <h3 class="text-center text-info">Use a local account to log in.</h3>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" class="text-info"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="text-info">></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.RememberMe" class="text-info">
                                <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                                <span><input asp-for="Input.RememberMe" type="checkbox"></span>
                            </label><br>
                            <input type="submit" class="btn btn-info btn-md">Log in</input>
                        </div>
                        @*<div id="register-link" class="text-right">
                                <a href="#" class="text-info">Register here</a>
                            </div>*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
